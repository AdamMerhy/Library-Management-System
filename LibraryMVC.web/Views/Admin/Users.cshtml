@model IList<UserRoleViewModel>
@{
    ViewData["Title"] = "User Management";
}

<h2 class="mb-4">User Management</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>Full Name</th>
            <th>Role</th>
            <th style="width:120px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@(user.FullName ?? "â€”")</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        var badge = role switch
                        {
                            "Admin" => "bg-danger",
                            "Librarian" => "bg-warning text-dark",
                            _ => "bg-secondary"
                        };
                        <span class="badge @badge">@role</span>
                    }
                </td>
                <td>
                    <a asp-action="EditRole" asp-route-id="@user.UserId"
                       class="btn btn-sm btn-outline-primary">Change Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>