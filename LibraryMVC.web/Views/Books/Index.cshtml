@model BookListViewModel
@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

<form method="get" asp-action="Index" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Search</label>
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Title, Author, ISBN, Tags..." />
        </div>
        <div class="col-md-2">
            <label class="form-label">Category</label>
            <select name="Category" class="form-select">
                <option value="">All</option>
                @foreach (var cat in Model.Categories)
                {
                    <option value="@cat" selected="@(Model.Category == cat)">@cat</option>
                }
            </select>
        </div>
        <div class="col-md-1">
            <label class="form-label">Year Min</label>
            <input type="number" name="PublishYearMin" value="@Model.PublishYearMin" class="form-control" />
        </div>
        <div class="col-md-1">
            <label class="form-label">Year Max</label>
            <input type="number" name="PublishYearMax" value="@Model.PublishYearMax" class="form-control" />
        </div>
        <div class="col-md-2">
            <div class="form-check mt-4">
                <input type="checkbox" name="AvailableOnly" value="true" class="form-check-input"
                       checked="@Model.AvailableOnly" id="availOnly" />
                <label class="form-check-label" for="availOnly">Available Only</label>
            </div>
        </div>
        <div class="col-md-1">
            <label class="form-label">Per Page</label>
            <select name="PageSize" class="form-select">
                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                <option value="20" selected="@(Model.PageSize == 20)">20</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </div>
</form>

@if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
{
    <p>
        <a asp-action="Create" class="btn btn-success">+ Add Book</a>
    </p>
}

@if (!Model.Books.Any())
{
    <div class="alert alert-info">No books found.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Year</th>
                    <th>Available</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.Category</td>
                        <td>@book.PublishYear</td>
                        <td>
                            <span class="badge @(book.AvailableCopies > 0 ? "bg-success" : "bg-danger")">
                                @book.AvailableCopies / @book.TotalCopies
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-outline-primary">Details</a>
                            @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                            {
                                <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Pagination *@
    @if (Model.TotalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                @for (int p = 1; p <= Model.TotalPages; p++)
                {
                    <li class="page-item @(p == Model.Page ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-Page="@p"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-Category="@Model.Category"
                           asp-route-AvailableOnly="@Model.AvailableOnly"
                           asp-route-PublishYearMin="@Model.PublishYearMin"
                           asp-route-PublishYearMax="@Model.PublishYearMax"
                           asp-route-PageSize="@Model.PageSize">@p</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
