@model Book
@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.Author</dd>

            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@(Model.ISBN ?? "—")</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@(Model.Category ?? "—")</dd>

            <dt class="col-sm-3">Tags</dt>
            <dd class="col-sm-9">@(Model.Tags ?? "—")</dd>

            <dt class="col-sm-3">Language</dt>
            <dd class="col-sm-9">@(Model.Language ?? "—")</dd>

            <dt class="col-sm-3">Publish Year</dt>
            <dd class="col-sm-9">@(Model.PublishYear?.ToString() ?? "—")</dd>

            <dt class="col-sm-3">Shelf Location</dt>
            <dd class="col-sm-9">@(Model.LocationShelf ?? "—")</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(Model.Description ?? "—")</dd>

            <dt class="col-sm-3">Copies</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.AvailableCopies > 0 ? "bg-success" : "bg-danger")">
                    @Model.AvailableCopies available
                </span> / @Model.TotalCopies total
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-controller="Loans" asp-action="History" asp-route-id="@Model.Id" class="btn btn-outline-info">Loan History</a>
    }
</div>
