@{
    ViewData["Title"] = "Check Out a Book";
    var books = (SelectList)ViewBag.Books;
    var users = (SelectList)ViewBag.Users;
}
@using Microsoft.AspNetCore.Mvc.Rendering

<h2 class="mb-4">Check Out a Book</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" asp-action="Checkout">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="bookId" class="form-label">Book</label>
                        <select id="bookId" name="bookId" class="form-select" required>
                            <option value="">-- Select a book --</option>
                            @foreach (var item in books)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="userId" class="form-label">Member</label>
                        <select id="userId" name="userId" class="form-select" required>
                            <option value="">-- Select a member --</option>
                            @foreach (var item in users)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="dueDays" class="form-label">Loan Duration (days)</label>
                        <input type="number" id="dueDays" name="dueDays" class="form-control"
                               value="14" min="1" max="90" />
                        <div class="form-text">Default is 14 days.</div>
                    </div>

                    <button type="submit" class="btn btn-primary">Check Out</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>