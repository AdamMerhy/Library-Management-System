@{
    ViewData["Title"] = "Home";
}

<div class="hero mb-5">
    <h1 class="display-4 mb-3">📚 Mini Library</h1>
    <p class="lead mb-4">Discover, borrow, and manage your favourite books — all in one place.</p>
    <div class="d-flex justify-content-center gap-3 flex-wrap">
        <a asp-controller="Books" asp-action="Index" class="btn btn-light btn-lg px-4">
            Browse Books
        </a>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="Search" asp-action="Ai" class="btn btn-outline-light btn-lg px-4">
                AI Search Assistant
            </a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg px-4">
                Sign In
            </a>
        }
    </div>
</div>
